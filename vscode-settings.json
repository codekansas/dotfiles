{
  /* Development languages */
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[cu]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[cuda-cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[cmake]": {
    "editor.defaultFormatter": "cheshirekow.cmake-format",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.formatOnType": false
  },

  /* Web languages */
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always",
      "source.removeUnusedImports": "always"
    },
    "editor.formatOnType": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always",
      "source.removeUnusedImports": "always"
    },
    "editor.formatOnType": false
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always",
      "source.removeUnusedImports": "always"
    },
    "editor.formatOnType": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always",
      "source.removeUnusedImports": "always"
    },
    "editor.formatOnType": false
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120
  },

  /* Configuration languages */
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* Extensions */
  // "extensions.autoUpdate": false,
  // "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,

  /* Python language features */
  "python.diagnostics.sourceMapsEnabled": true,
  "python.languageServer": "Default",
  "python.analysis.logLevel": "Information",
  "python.analysis.autoSearchPaths": false,

  /* Ruff settings */
  "ruff.fixAll": true,
  "ruff.organizeImports": true,

  /* Rust settings */
  "rust-analyzer.procMacro.enable": false,
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "rust-analyzer.inlayHints.typeHints.enable": false,

  /* Prettier */
  // This overrides the per-language configuration, which is bad for YAML.
  // "prettier.tabWidth": 4,

  /* Jupyter language features */
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },

  /* C++ language features */
  "C_Cpp.autocomplete": "default",
  "C_Cpp.vcFormat.wrap.preserveBlocks": "allOneLineScopes",
  "C_Cpp.codeFolding": "enabled",
  "C_Cpp.simplifyStructuredComments": true,
  "C_Cpp.formatting": "vcFormat",
  "C_Cpp.vcFormat.indent.braces": false,
  "C_Cpp.vcFormat.indent.preprocessor": "oneLeft",
  "C_Cpp.vcFormat.indent.accessSpecifiers": false,
  "C_Cpp.vcFormat.indent.lambdaBracesWhenParameter": true,
  "C_Cpp.vcFormat.indent.multiLineRelativeTo": "outermostParenthesis",
  "C_Cpp.vcFormat.indent.withinParentheses": "indent",
  "C_Cpp.vcFormat.space.aroundTernaryOperator": "insert",
  "C_Cpp.vcFormat.space.aroundBinaryOperator": "insert",
  "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "remove",
  "C_Cpp.vcFormat.space.afterCastCloseParenthesis": true,
  "C_Cpp.vcFormat.space.groupSquareBrackets": true,
  "C_Cpp.vcFormat.space.afterComma": true,
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.lambda": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "sameLine",
  "C_Cpp.vcFormat.newLine.beforeCatch": false,
  "C_Cpp.vcFormat.newLine.beforeElse": false,
  "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": false,
  "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": false,
  "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": false,
  "C_Cpp.vcFormat.newLine.beforeWhileInDoWhile": false,
  "C_Cpp.enhancedColorization": "enabled",
  "C_Cpp.commentContinuationPatterns": ["/**"],
  "C_Cpp.errorSquiggles": "enabled",
  "cmake.configureOnOpen": false,

  /* Editor features */
  // "editor.quickSuggestions": {
  //     "other": false,
  //     "comments": false,
  //     "strings": false
  // },
  "editor.quickSuggestionsDelay": 10,
  "editor.rulers": [
    {
      "column": 80,
      "color": "#00ff2255"
    },
    {
      "column": 88,
      "color": "#00ff2222"
    },
    {
      "column": 120,
      "color": "#00e1ff55"
    }
  ],
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.maxTokenizationLineLength": 512,
  "editor.cursorSurroundingLines": 15,

  /* Explorer features */
  "explorer.confirmDragAndDrop": false,

  /* Terminal features */
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",

  /* Remote features */
  "remote.autoForwardPorts": true,
  "remote.autoForwardPortsSource": "output",
  "remote.downloadExtensionsLocally": false,
  "remote.SSH.logLevel": "debug",
  "remote.SSH.connectTimeout": 60,
  "remote.SSH.useLocalServer": true,
  "remote.SSH.enableDynamicForwarding": false,
  "remote.SSH.localServerDownload": "off",
  "remote.SSH.remoteServerListenOnSocket": true,
  "remote.SSH.remotePlatform": {
    "bbolte-local": "linux",
    "wall-e": "linux",
    "wall-e.public": "linux",
    "yui-hirasawa": "linux",
    "sdc": "linux",
    "se02": "linux",
    "moloch": "linux",
    "free-jetson": "linux",
    "devfair": "linux",
    "lab": "linux",
    "stretch-1": "linux",
    "stretch": "linux",
    "gregson": "linux",
    "andromeda": "linux",
    "misaki-nakahara": "linux",
    "stompy-torso": "linux",
    "garage-rig": "linux",
    "oracle": "linux",
    "kbot": "linux",
    "yuno-gasai": "linux",
    "lambda": "linux",
    "nyc-lambda": "linux"
  },

  /* Speed up search */
  "search.followSymlinks": false,

  /* Files settings */
  "files.associations": {
    "*.cmake.in": "cmake",
    "*.urdf": "xml",
    "*.mjcf": "xml",
    "*.mdx": "markdown"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.exclude": {
    // "**/thirdparty/**": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/__pycache__/**": true,
    "**/*.egg-info": true,
    "**/.ipynb_checkpoints": true,
    "**/.mypy_cache": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "files.watcherExclude": {
    "**/.classpath/**": true,
    "**/.project/**": true,
    "**/.settings/**": true,
    "**/.factorypath/**": true,
    "**/thirdparty/**": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__/**": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.fbs": true,
    "**/*.json": true,
    "**/*.egg-info": true,
    "**/.ipynb_checkpoints": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/log/**": true,
    "**/logs/**": true,
    "**/.fdk/**": true
  },
  "search.exclude": {
    "**/.classpath/**": true,
    "**/.project/**": true,
    "**/.settings/**": true,
    "**/.factorypath/**": true,
    "**/thirdparty/**": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__/**": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.fbs": true,
    // "**/*.json": true,
    "**/*.egg-info": true,
    "**/.ipynb_checkpoints": true,
    "**/.mypy_cache": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/log/**": true,
    "**/logs/**": true,
    "**/.fdk/**": true
  },

  /* Workbench features */
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },

  /* Version control */
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.ignoreLimitWarning": true,

  /* GitLens */
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.inlineSuggest.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  /* Copilot */
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "yaml": true
  },

  /* Miscellaneous */
  "security.workspace.trust.untrustedFiles": "open",
  "git.openRepositoryInParentFolders": "never",
  "window.zoomLevel": -1,

  /* Vim */
  "editor.lineNumbers": "relative",
  "cursor.cpp.disabledLanguages": ["markdown", "scminput"],
  "editor.accessibilitySupport": "off",
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
  "extensions.ignoreRecommendations": true,
  "redhat.telemetry.enabled": true
}
